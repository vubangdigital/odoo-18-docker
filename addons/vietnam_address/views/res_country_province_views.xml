<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_country_province_tree_view" model="ir.ui.view">
        <field name="name">res.country.province.list.view</field>
        <field name="model">res.country.province</field>
        <field name="arch" type="xml">
            <list string="Province/City">
                <field name="code"/>
                <field name="name"/>
                <field name="state_id" context="{'default_country_id': country_id}"/>
                <field name="country_id" options="{'no_open': True, 'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="res_country_province_form_view" model="ir.ui.view">
        <field name="name">res.country.province.form.view</field>
        <field name="model">res.country.province</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="country_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="state_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="res_country_province_search_view" model="ir.ui.view">
        <field name="name">res.country.province.search.view</field>
        <field name="model">res.country.province</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
            </search>
        </field>
    </record>

    <record id="res_country_province_action" model="ir.actions.act_window">
        <field name="name">Province</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country.province</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="res_country_province_tree_view"/>
        <field name="search_view_id" ref="res_country_province_search_view"/>
    </record>

</odoo>
